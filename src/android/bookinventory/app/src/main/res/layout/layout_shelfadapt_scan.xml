<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scaninfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/whitesmoke"
        app:cardUseCompatPadding="true" >

    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layTip"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/tip"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:layout_margin="4dp"
                android:textColor="#1296db"
                android:id="@+id/tip"
                android:text="@string/tipmessage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/laybook"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="图书编号:"
                android:padding="3dp"
                android:textColor="#1296db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/bookshelfscan_barcode"
                android:textColor="#1296db"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/bookshelfscan_title"
                android:text=""
                android:textColor="#1296db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layshelf"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="#1296db"
                android:padding="3dp"
                android:text="架位信息:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=""
                android:textColor="#1296db"
                android:layout_marginLeft="20dp"
                android:id="@+id/bookshelfscan_shelfno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>


