<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/shelfarrage_shelf_item_level"
            android:src="@mipmap/jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/lay1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shelfarrage_shelf_item_logo"
            android:src="@mipmap/shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/shelfarrage_shelf_item_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:id="@+id/shelfarrage_shelf_item_scandatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>